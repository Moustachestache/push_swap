WHO =		$(shell whoami)

NAME =		push_swap

SRCS =		push_swap.c srcs/ft_exit.c srcs/ft_swap.c srcs/ft_push.c \
		srcs/ft_rotate.c srcs/etator_tf.c srcs/ft_utils.c srcs/ft_radix.c \
		srcs/ft_validate.c

O_SRCS =	$(SRCS:.c=.o)

LIB =		srcs/lib/

CC =		clang
CFLAGS =	-Wall -Werror -Wextra -g

all:		$(NAME)

$(NAME):	$(O_SRCS)
		cd $(LIB) && $(MAKE) all
		$(CC) $(CFLAGS) $(O_SRCS) $(LIB)libft.a -o $(NAME)
		@echo $(DBG)

clean:
		cd $(LIB) && $(MAKE) clean
		rm -f $(O_SRCS)

fclean:		clean
		cd $(LIB) && $(MAKE) fclean
		rm -f $(NAME)

re:		fclean all
